<style>
	.modern-btn {
		position: relative;
		display: inline-flex;
		align-items: center;
		justify-content: center;
		padding: 12px 24px;
		min-width: 120px;
		border-radius: 16px;
		font-weight: 600;
		font-size: 14px;
		text-decoration: none;
		color: white;
		overflow: hidden;
		backdrop-filter: blur(10px);
		-webkit-backdrop-filter: blur(10px);
		border: 1px solid rgba(255, 255, 255, 0.2);
		transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
		transform: translateY(20px);
		opacity: 0;
	}

	.modern-btn:before {
		content: "";
		position: absolute;
		top: 0;
		left: -100%;
		width: 100%;
		height: 100%;
		background: linear-gradient(
			90deg,
			transparent,
			rgba(255, 255, 255, 0.2),
			transparent
		);
		transition: left 0.5s;
		z-index: 1;
	}

	.modern-btn:hover:before {
		left: 100%;
	}

	.btn-content {
		display: flex;
		align-items: center;
		gap: 8px;
		position: relative;
		z-index: 2;
	}

	.btn-icon {
		width: 18px;
		height: 18px;
		transition: transform 0.3s ease;
	}

	.btn-glow {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		border-radius: 16px;
		opacity: 0;
		transition: opacity 0.3s ease;
		z-index: 0;
	}

	.resume-btn {
		background: linear-gradient(135deg, #ff6b6b, #ff8e53, #ff6b9d);
		box-shadow: 0 8px 32px rgba(255, 107, 107, 0.3);
	}

	.resume-btn .btn-glow {
		background: linear-gradient(135deg, #ff6b6b, #ff8e53, #ff6b9d);
		filter: blur(20px);
	}

	.resume-btn:hover {
		transform: translateY(-4px) scale(1.05);
		box-shadow: 0 16px 48px rgba(255, 107, 107, 0.4);
	}

	.resume-btn:hover .btn-glow {
		opacity: 0.6;
	}

	.linkedin-btn {
		background: linear-gradient(135deg, #0077b5, #00a0dc, #0077b5);
		box-shadow: 0 8px 32px rgba(0, 119, 181, 0.3);
	}

	.linkedin-btn .btn-glow {
		background: linear-gradient(135deg, #0077b5, #00a0dc, #0077b5);
		filter: blur(20px);
	}

	.linkedin-btn:hover {
		transform: translateY(-4px) scale(1.05);
		box-shadow: 0 16px 48px rgba(0, 119, 181, 0.4);
	}

	.linkedin-btn:hover .btn-glow {
		opacity: 0.6;
	}

	.github-btn {
		background: linear-gradient(135deg, #24292e, #6f42c1, #24292e);
		box-shadow: 0 8px 32px rgba(111, 66, 193, 0.3);
	}

	.github-btn .btn-glow {
		background: linear-gradient(135deg, #24292e, #6f42c1, #24292e);
		filter: blur(20px);
	}

	.github-btn:hover {
		transform: translateY(-4px) scale(1.05);
		box-shadow: 0 16px 48px rgba(111, 66, 193, 0.4);
	}

	.github-btn:hover .btn-glow {
		opacity: 0.6;
	}

	.modern-btn.active {
		opacity: 1;
		transform: translateY(0);
	}

	.modern-btn.active:nth-child(1) {
		transition-delay: 0.1s;
	}

	.modern-btn.active:nth-child(2) {
		transition-delay: 0.3s;
	}

	.modern-btn.active:nth-child(3) {
		transition-delay: 0.5s;
	}

	.modern-btn:active {
		transform: translateY(-2px) scale(0.98);
	}

	.modern-btn:hover .btn-icon {
		transform: scale(1.1) rotate(5deg);
	}

	.paragraph-animate {
		opacity: 0;
		transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
	}

	.p-left {
		transform: translateX(-200px);
	}

	.p-right {
		transform: translateX(200px);
	}

	.paragraph-animate.active {
		opacity: 1;
		transform: translateX(0);
		transition-delay: 0.1s;
	}

	@media (max-width: 640px) {
		.modern-btn {
			min-width: 100px;
			padding: 10px 16px;
			font-size: 12px;
		}

		.btn-icon {
			width: 16px;
			height: 16px;
		}
	}
</style>

<script>
	document.addEventListener("astro:page-load", () => {
		const buttons = document.querySelectorAll<HTMLButtonElement>(".modern-btn");
		const paragraphs =
			document.querySelectorAll<HTMLParagraphElement>(".paragraph-animate");
		const allElements: HTMLElement[] = [...buttons, ...paragraphs];

		const observerOptions = {
			threshold: 0.1,
			rootMargin: "50px 0px 0px 0px",
		};

		const activeObserver = new IntersectionObserver((entries) => {
			entries.forEach((entry) => {
				if (entry.isIntersecting) {
					entry.target.classList.add("active");
				}
			});
		}, observerOptions);

		allElements.forEach((element, index) => {
			element.style.transitionDelay = `${index * 0.5}s`;
			setTimeout(() => {
				activeObserver.observe(element);
			}, 500);
		});
	});
</script>
