		const sections = document.querySelectorAll(".fade-in");
		const educationElements = document.querySelectorAll(".horizontal-element");
		const skillElements = document.querySelectorAll(".skill-element");
		const cardEls = document.querySelectorAll(".card");
		const projectCardEls = document.querySelectorAll(".project-card");
		const allCardEls = [...cardEls, ...projectCardEls];
		const allElements = [...sections, ...educationElements, ...skillElements];
		const discIdEl = document.getElementById("discordId");
		const copyTagEl = document.getElementById("copyTag");

		discIdEl?.addEventListener("click", () => {
			navigator.clipboard.writeText(discIdEl.textContent || "").then(() => {
				if (copyTagEl) {
					copyTagEl.style.opacity = "1";
					setTimeout(() => {
						copyTagEl.style.opacity = "0";
					}, 2000);
				}
			});
		});

		const observer = new IntersectionObserver(
			(entries) => {
				entries.forEach((entry) => {
					if (entry.isIntersecting) {
						entry.target.classList.add("show");
					}
				});
			},
			{ threshold: 0.4 }
		);
		const cardObserver = new IntersectionObserver(
			(entries) => {
				entries.forEach((entry, index) => {
					if (entry.isIntersecting) {
						console.log(`Revealing card: ${entry.target}`);

						setTimeout(() => {
							entry.target.classList.add("reveal");
						}, index * 500);
					}
				});
			},
			{ threshold: 0.4 }
		);
		allCardEls.forEach((element) => {
			cardObserver.observe(element);
		});

		allElements.forEach((element) => {
			observer.observe(element);
		});
	});

	function setRandomTranslation() {
		const elements: any = document.querySelectorAll(".skill-element");
		elements.forEach((element: any) => {
			const random = Math.floor(Math.random() * 10) - 5;
			element.style.setProperty("--random-translate-y", `${random}px`);
			element.style.setProperty("--random-translate-x", `${random}px`);
		});
	}
	setRandomTranslation();
</script>
