<script>
	document.addEventListener("astro:page-load", () => {
		const yearString = new Date().getFullYear().toString();
		const yearTagEl = document.getElementById("yearTag") as HTMLSpanElement;
		yearTagEl.innerText = yearString;
		const sections = document.querySelectorAll(".fade-in");
		const educationElements = document.querySelectorAll(".horizontal-element");
		const skillElements = document.querySelectorAll(".skill-element");
		const allElements = [...sections, ...educationElements];

		const observer = new IntersectionObserver(
			(entries) => {
				entries.forEach((entry) => {
					if (entry.isIntersecting) {
						entry.target.classList.add("show");
					}
				});
			},
			{ threshold: 0.4 }
		);

		skillElements.forEach((element, index) => {
			setTimeout(() => {
				observer.observe(element);
			}, index * 200);
		});

		allElements.forEach((element) => {
			observer.observe(element);
		});
	});

	function setRandomTranslation() {
		const elements: any = document.querySelectorAll(".skill-element");
		elements.forEach((element: any) => {
			const random = Math.floor(Math.random() * 10) - 5;
			element.style.setProperty("--random-translate-y", `${random}px`);
			element.style.setProperty("--random-translate-x", `${random}px`);
		});
	}
	setRandomTranslation();
</script>
